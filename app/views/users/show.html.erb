<% provide(:title, "#{@user.username}'s page")%>
<p id="notice"><%= notice %></p>

<h1>
  <% profile_image_for @user %>

  <strong><%= @user.username %></strong>
</h1>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
